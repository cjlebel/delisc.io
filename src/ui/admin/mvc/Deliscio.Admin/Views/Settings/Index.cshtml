@model Deliscio.Modules.Settings.Common.SettingsClassInfo[]

@if (Model.Length > 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Settings</h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Type</th>
                                    <th>Categories</th>
                                  
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var setting in Model)
                                {
                                    <tr>
                                        <td><a asp-controller="Settings" asp-action="Details" asp-route-name="@setting.Name">@setting.Name</a></td>
                                        <td>@setting.Description</td>
                                        <td>@setting.Type</td>
                                        <td>@string.Join(" / ", setting.Category)</td>
                                        <td></td>
                                        <td>
                                            @* <a href="@Url.Action("Edit", "Settings", new { id = setting.Id })" class="btn btn-primary btn-xs">Edit</a> *@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

}