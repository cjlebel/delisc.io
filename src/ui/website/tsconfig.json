{
   "compilerOptions": {
      "baseUrl": ".",
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
         {
            "name": "next"
         }
      ],
      "paths": {
         "@/*": ["src/*"],
         "@/src/components/*": ["components/*"],
         "@/src/apis/*": ["apis/*"],
         "@/src/types/*": ["types/*"],
         "@/src/styles/*": ["styles/*"],
         "@/src/utils/*": ["utils/*"]
      }
   },
   "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      ".next/types/**/*.ts",
      "src/app/[...params]/page.tsxz"
   ],
   "exclude": ["node_modules"]
}
